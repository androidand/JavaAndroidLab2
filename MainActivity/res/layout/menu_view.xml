<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:gravity="left"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/menu_top"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="left"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/participants"
            android:textSize="@dimen/MediumText" />

        <Spinner
            android:id="@+id/partspin"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:gravity="left" />

        <TextView
            android:id="@+id/tot_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_cost"
            android:textSize="@dimen/SmallText" />

        <TextView
            android:id="@+id/tot_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/MediumText" android:paddingLeft="@dimen/SmallText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_view_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.14"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/menu_title_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/menu_title"
            android:text="@string/menu_title"
            android:textSize="@dimen/LargeText" >
        </TextView>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <!-- Nothing will be added to this view -->
    </LinearLayout>

    <TextView
        android:id="@+id/menu_view_starter_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:text="@string/submenu_title1"
        android:textSize="@dimen/MediumText" >
    </TextView>

    <LinearLayout
        android:id="@+id/menu_view_starter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <!-- XML Dish objects of Starters added programatically here -->

    </LinearLayout>

    <TextView
        android:id="@+id/menu_view_MainCourse_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/menu_title"
        android:text="@string/submenu_title2"
        android:textSize="@dimen/MediumText" >
    </TextView>

    <LinearLayout
        android:id="@+id/menu_view_mainCourse_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <!-- XML Dish objects of Main Courses added programatically here -->
    </LinearLayout>

    <TextView
        android:id="@+id/menu_view_desert_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/menu_title"
        android:text="@string/submenu_title3"
        android:textSize="@dimen/MediumText" >
    </TextView>

    <LinearLayout
        android:id="@+id/menu_view_desert_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <!-- XML Dish objects of Deserts added programatically here -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_view_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.11"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/createMenuButton"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:padding="@dimen/SmallText"
            android:text="@string/create"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/LargeText" />

        <!-- Nothing will be added to this view -->

    </LinearLayout>

</LinearLayout>